  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <div class = "new book create" >
          <h2 class="mt-3">投稿</h2>
          <div class = "form-group">
            <%= form_with model: @blog, url: blogs_path, local:true do |f| %>
              <p>投稿画像</p>
              <%= f.file_field :images %>
              <p>Title</p>
              <%= f.text_field :title %>
              <p>Opinion</p>
              <%= f.text_area :body %>
              <%= f.submit "投稿する", class: 'btn btn-success' %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-md-9">
        <h2>投稿一覧</h2>
        <div class="twitter__block">
          <% @blogs.each do |blog| %>
            <figure>
              <% if @client.profile_image.attached? %>
                <%= image_tag @client.profile_image.variant(resize: '70x70') %>
              <% end %>
              <%= blog.client.name %>
            </figure>
            <div class="twitter__block-text">
              <div class="name">
                
              </div>
              <div class="in-pict">
                <% if blog.images.attached? %>
                  <%= image_tag blog.images[0].variant(resize: '300x400') %>
                <% end %>
              </div>
              <!--%= blog.title %>-->
              <div class="text">
                <%= blog.body %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
