<div class = "container">
  <div class = "row" >

    <div class = "col-md-3" >
      <div class = "rounded-circle">
        <% if @client.profile_image.attached? %>
          <%= image_tag @client.profile_image.variant(resize: '300x300') %> <br>
        <% else %>
          <%= image_tag "no_image.jpg"%>
        <% end %>
      </div>
    </div>

    <div class = "col-md-9" >
      <table cellpadding="20">
        <thead>
          <tr><th></th></th></tr>
        </thead>
        <tbody>
          <tr><td><%= current_client.name %></td></tr>
          <tr>
            <td><%= current_client.name %></td>
            <td><%= current_client.name %></td> <!--フォロワー数を表示予定-->
            <td><%= current_client.name %></td> <!--フォロ中数を表示予定-->
          </tr>
          <tr><td>自己紹介文</td></tr>
          <tr><td><%= current_client.introduction %></td></tr>
        </tbody>
      </table>
      <%= link_to edit_client_path(@client.id) do %>
        <button class = "btn btn-outline-secondary">
          <i>プロフィール編集へ</i>
        </button>
      <% end %>
    </div>

  </div>
</div>