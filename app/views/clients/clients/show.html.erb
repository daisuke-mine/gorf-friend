<div class = "container">
  <div class = "row" >

    <div class = "col-md-3" >
      <div class = "rounded-circle">
        <% if @client.profile_image.attached? %>
          <%= image_tag @client.profile_image.variant(resize: '300x300'), class: "rounded-circle" %> <br>
        <% else %>
          <%= image_tag "no_image.jpg"%>
        <% end %>
      </div>
    </div>

    <div class = "col-md-9" >
      <table cellpadding="20">
        <thead>
          <tr><th></th></th></tr>
        </thead>
        <tbody>
          <tr><td><%= current_client.name %></td></tr>
          <tr>
            <td><%= current_client.name %></td>
            <td><%= current_client.name %></td> <!--フォロワー数を表示予定-->
            <td><%= current_client.name %></td> <!--フォロ中数を表示予定-->
          </tr>
          <tr><td>自己紹介文</td></tr>
          <tr><td><%= current_client.introduction %></td></tr>
        </tbody>
      </table>
      <%= link_to edit_client_path(@client.id) do %>
        <button class = "btn btn-outline-secondary">
          <i>プロフィール編集へ</i>
        </button>
      <% end %>
    </div>
  </div>
  <div class = "row" >
    <div class = "col-12" >
      <div class="mx-auto" style="width: 200px;">
        <% @blogs.each do |blog| %>
          <figure>
            <% if blog.client.profile_image.attached? %>
              <%= image_tag blog.client.profile_image.variant(resize: '70x70'), class: "rounded-circle" %>
            <% end %>
            <%= blog.client.name %>
          </figure>
          <% if blog.images.attached? %>
            <%= image_tag blog.images[0].variant(resize: '300x400') %>
          <% end %>
          <%= blog.body %>
        <% end %>
      </div>
    </div>
  </div>
</div>