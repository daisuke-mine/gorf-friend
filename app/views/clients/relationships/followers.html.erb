  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-8">
        <h2>Follower Users</h2>
        <% if @client.exists? %>
          <table>
            <thead>
              <tr>
                <th>name</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @client.each do |client| %>
                <tr>
                  <td>
                    <% if client.profile_image.attached? %>
                      <%= image_tag client.profile_image.variant(resize: '70x70'), class: "rounded-circle" %>
                    <% end %>
                  </td>
                  <td><%= client.name %></td>
                  <td>フォロー数: <%= client.followings.count %></td>
                  <td>フォロワー数: <%= client.followers.count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
      </div>
    </div>
  </div>